{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "target": "es6",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
